<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llKalkulator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorKrem"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".KalkulatorActivity">

    <EditText
        android:id="@+id/etAwalKakulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nilai awal"
        android:inputType="numberDecimal"
        android:maxLength="12" />

    <EditText
        android:id="@+id/etAkhirKakulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nilai awal"
        android:inputType="numberDecimal"
        android:maxLength="12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_dark_krem"
            android:text="+"
            android:textSize="21sp" />

        <Button
            android:id="@+id/btnKurang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_dark_krem"
            android:text="-"
            android:textSize="21sp" />

        <Button
            android:id="@+id/btnKali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_dark_krem"
            android:text="*"
            android:textSize="21sp" />

        <Button
            android:id="@+id/btnBagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_dark_krem"
            android:text="/"
            android:textSize="21sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Hasil:"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />
</LinearLayout>